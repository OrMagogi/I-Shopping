<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Ui.SingleShoppingListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/product_list_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="רשימת מוצרים"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/add_new_product_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:src="@drawable/ic_add_new_product" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/search_product_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            app:hintText="חפש מוצר"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/closeShoppingListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:text="סגור קניה"
            android:textSize="20dp" />

    </LinearLayout>


</ScrollView>